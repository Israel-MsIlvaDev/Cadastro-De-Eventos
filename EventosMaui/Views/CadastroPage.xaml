<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventosMaui.Views.CadastroPage"
             Title="Cadastro de Evento">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label 
                Text="Cadastro de Novo Evento"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Label Text="Nome do Evento:" />
            <Entry Text="{Binding Nome}" Placeholder="Ex: Conferência de Tecnologia" />

            <Label Text="Local do Evento:" />
            <Entry Text="{Binding Local}" Placeholder="Ex: Centro de Convenções" />

            <Label Text="Data de Início:" />
            <DatePicker Date="{Binding DataInicio}" Format="dd/MM/yyyy" />

            <Label Text="Data de Término:" />
            <DatePicker Date="{Binding DataTermino}" Format="dd/MM/yyyy" />

            <Label Text="Número de Participantes:" />
            <Entry Text="{Binding NumeroParticipantes}" Keyboard="Numeric" />

            <Label Text="Custo por Participante (R$):" />
            <Entry Text="{Binding CustoPorParticipante}" Keyboard="Numeric" />

            <Button 
                Text="Cadastrar e Ver Resumo"
                Clicked="OnCadastrarClicked"
                Margin="0,20,0,0"
                CornerRadius="8"
                FontAttributes="Bold" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>