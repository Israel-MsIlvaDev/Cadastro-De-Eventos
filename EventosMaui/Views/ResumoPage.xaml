<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventosMaui.Views.ResumoPage"
             Title="Resumo do Evento">


    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label 
                Text="Resumo do Evento"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center" />


            <Label Text="{Binding Nome, StringFormat='Evento: {0}'}" FontSize="18" />
            <Label Text="{Binding Local, StringFormat='Local: {0}'}" FontSize="18" />

            <Label Text="{Binding DataInicio, StringFormat='Início: {0:dd/MM/yyyy}'}" FontSize="18" />
            <Label Text="{Binding DataTermino, StringFormat='Término: {0:dd/MM/yyyy}'}" FontSize="18" />

            <Label Text="{Binding DuracaoEmDias, StringFormat='Duração: {0} dia(s)'}" FontSize="18" FontAttributes="Italic" />

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,10" />

            <Label Text="{Binding NumeroParticipantes, StringFormat='Nº de Participantes: {0}'}" FontSize="18" />

            <Label Text="{Binding CustoPorParticipante, StringFormat='Custo por Participante: {0:C}'}" FontSize="18" />

            <Label 
                Text="{Binding CustoTotal, StringFormat='CUSTO TOTAL: {0:C}'}" 
                FontSize="20" 
                FontAttributes="Bold" 
                TextColor="Green"
                HorizontalOptions="Center" 
                Margin="0,15,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>